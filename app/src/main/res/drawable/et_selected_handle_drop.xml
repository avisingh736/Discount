<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate
                android:fromDegrees="45"
                android:toDegrees="45"
                android:pivotX="20%"
                android:pivotY="60%">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                   android:shape="rectangle">
                <solid android:color="@color/colorThemeYellow"/>
                <stroke android:width="0.1dp"
                        android:color="@color/colorThemeRed"/>
                <size
                        android:width="20dp"
                        android:height="20dp" />
                <corners
                        android:topLeftRadius="@dimen/dp_0"
                        android:topRightRadius="@dimen/dp_20"
                        android:bottomLeftRadius="@dimen/dp_20"
                        android:bottomRightRadius="@dimen/dp_20"/>
            </shape>
        </rotate>
    </item>

</layer-list>