<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".views.ui.fragments.BlankFragment">

    <LinearLayout
            android:layout_width="@dimen/dp_220"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <com.github.siyamed.shapeimageview.CircularImageView
                android:src="@drawable/slider_bg"
                app:siRadius="@dimen/dp_20"
                app:siBorderWidth="@dimen/dp_1"
                app:siBorderColor="@color/colorWhite"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/l1"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="1"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvAddress"
                    android:text="@string/l2"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_10"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/colorText"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>