<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forgetPasswordRoot"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite"
        tools:context=".views.ui.activities.ForgotPasswordActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/ivGoToBack"
                            android:src="@drawable/ic_back_ico"
                            android:padding="@dimen/dp_12"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"/>
                    <TextView
                            android:text="@string/forgot_password"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/dp_5"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <!-- Do not remove this image view-->
                    <ImageView
                            android:visibility="invisible"
                            android:src="@drawable/ic_back_ico"
                            android:padding="@dimen/dp_12"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
            <View
                    android:background="@drawable/toolbar_drop_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"/>
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:src="@drawable/forgot_password_ico"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginBottom="@dimen/dp_20"/>
                <TextView
                        android:text="@string/forgot_your_password_"
                        android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@string/please_enter_your_registered_email_address_below_to_reset_your_password"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorTextGray"
                        android:fontFamily="@font/poppins_light"
                        android:paddingStart="@dimen/dp_30"
                        android:paddingEnd="@dimen/dp_30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </FrameLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:orientation="vertical">
            <EditText
                    android:id="@+id/etEmailId"
                    style="@style/AppTheme.EditText"
                    android:hint="@string/email_address"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textVisiblePassword|textEmailAddress|textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btnSend"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/dp_35"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/poppins_bold"
                    android:background="@drawable/meterial_button_red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
            android:id="@+id/progressBar"
            android:theme="@style/AppTheme.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>