<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ui.activities.CouponActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/ivGoToBack"
                    android:src="@drawable/ic_back_ico"
                    android:padding="@dimen/dp_12"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
            <TextView
                    android:text="@string/coupon"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:src="@drawable/ic_filter_ico"
                    android:padding="@dimen/dp_12"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
        </LinearLayout>
        <View
                android:background="@drawable/toolbar_drop_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
            <ImageView
                    android:src="@drawable/ic_map_location_pin_ico"
                    android:padding="@dimen/dp_10"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
            <TextView
                    android:id="@+id/tvAddress"
                    android:text="@string/l2"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tvChangeAddress"
                    android:text="@string/change"
                    android:src="@drawable/ic_filter_ico"
                    android:textAllCaps="true"
                    android:textColor="@color/colorText"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCoupons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>