<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:paddingStart="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_0"
                android:paddingEnd="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@drawable/bg_dialog_red_top_rounded">
            <ImageView
                    android:src="@drawable/student_ico"
                    android:paddingTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:text="@string/are_you_student_"
                        android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_0"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@string/l2"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/poppins_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_25"
                android:background="@drawable/bg_dialog_white_bottom_rounded"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:orientation="vertical">
            <TextView
                    android:text="@string/please_fill_details_"
                    android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilUniversityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_0"
                    app:hintEnabled="false">
                <Spinner
                        android:id="@+id/spUniversityName"
                        style="@style/AppTheme.EditText"
                        android:hint="@string/university_name"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textVisiblePassword|textEmailAddress|textNoSuggestions"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilStudentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_0"
                    app:hintEnabled="false">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45">
                    <EditText
                            android:id="@+id/etStudentId"
                            style="@style/AppTheme.EditText"
                            android:hint="@string/student_id"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textVisiblePassword|textEmailAddress|textNoSuggestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:id="@+id/btnAdd"
                    android:text="@string/add"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/poppins_bold"
                    android:background="@drawable/meterial_button_red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"/>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabClose"
                android:layout_gravity="center"
                android:src="@drawable/ic_cancel_ico"
                app:backgroundTint="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>