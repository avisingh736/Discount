<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.ui.activities.CouponDetailActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/ivGoToBack"
                    android:src="@drawable/ic_back_ico"
                    android:padding="@dimen/dp_12"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
            <TextView
                    android:text="@string/details"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <ImageView

                    android:padding="@dimen/dp_12"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
        </LinearLayout>
        <View
                android:background="@drawable/toolbar_drop_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:orientation="horizontal">
                    <com.github.siyamed.shapeimageview.CircularImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/demo"
                            android:layout_width="@dimen/dp_78"
                            android:layout_height="@dimen/dp_78"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="@dimen/dp_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="@string/l1"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingBottom="@dimen/dp_2"
                                android:textSize="@dimen/sp_14"
                                android:maxLines="1"
                                android:textColor="@color/colorText"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40">
                            <ImageView
                                    android:src="@drawable/ic_map_location_pin_ico"
                                    android:padding="@dimen/dp_10"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"/>
                            <TextView
                                    android:id="@+id/tvAddress"
                                    android:text="@string/l2"
                                    android:textSize="@dimen/sp_12"
                                    android:gravity="center_vertical"
                                    android:fontFamily="@font/poppins_light"
                                    android:textColor="@color/colorText"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:text="@string/coupon_info"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="1"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10"
                            android:orientation="horizontal">
                        <com.github.siyamed.shapeimageview.CircularImageView
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/demo"
                                android:layout_width="@dimen/dp_78"
                                android:layout_height="@dimen/dp_78"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_80">
                            <TextView
                                    android:text="@string/l1"
                                    android:paddingTop="@dimen/dp_2"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:textSize="@dimen/sp_14"
                                    android:maxLines="1"
                                    android:textColor="@color/colorText"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">
                                    <TextView
                                            android:text="@string/voucher_code_"
                                            android:paddingTop="@dimen/dp_2"
                                            android:paddingBottom="@dimen/dp_2"
                                            android:textSize="@dimen/sp_12"
                                            android:maxLines="1"
                                            android:textColor="@color/colorText"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    <TextView
                                            android:text="@string/l3"
                                            android:paddingStart="@dimen/dp_5"
                                            android:paddingEnd="@dimen/dp_5"
                                            android:paddingTop="@dimen/dp_2"
                                            android:paddingBottom="@dimen/dp_2"
                                            android:textSize="@dimen/sp_10"
                                            android:maxLines="1"
                                            android:textColor="@color/colorThemeRed"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical">
                                    <TextView
                                            android:text="@string/valid_till"
                                            android:paddingTop="@dimen/dp_2"
                                            android:paddingBottom="@dimen/dp_2"
                                            android:textSize="@dimen/sp_12"
                                            android:maxLines="1"
                                            android:textColor="@color/colorText"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"/>
                                    <View
                                            android:background="@color/colorGray"
                                            android:layout_width="match_parent"
                                            android:layout_height="0.5dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                            android:text="@string/terms_and_conditions"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="1"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/tvTermsAndConditions"
                                android:text="@string/l4"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_78"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/colorText"
                                android:fontFamily="@font/poppins_light"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
            android:id="@+id/btnSignUp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/meterial_button_red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"/>
</android.support.constraint.ConstraintLayout>