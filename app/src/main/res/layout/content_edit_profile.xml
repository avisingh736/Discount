<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_edit_profile"
        android:background="@color/colorTransparent"
        tools:context=".views.ui.activities.EditProfileActivity">
    <LinearLayout
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
        <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical">
            <TextView
                    android:text="@string/first_name"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:background="@null"
                    android:padding="@dimen/dp_0"
                    android:id="@+id/etFirstName"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textColor="@color/colorMediumGray"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical">
            <TextView
                    android:text="@string/last_name"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:background="@null"
                    android:padding="@dimen/dp_0"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:id="@+id/etLastName"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorMediumGray"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical">
            <TextView
                    android:text="@string/email_id"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:background="@null"
                    android:padding="@dimen/dp_0"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:id="@+id/etEmailId"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorMediumGray"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <LinearLayout
                android:id="@+id/llDateOfBirth"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical">
            <TextView
                    android:text="@string/date_of_birth"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvDateOfBirth"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorMediumGray"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical">
            <TextView
                    android:text="@string/gender"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/llRadioMale"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/ivRadioMale"
                            android:src="@drawable/inactive_radio_ico"
                            android:padding="3dp"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                    <TextView
                            android:text="@string/male"
                            android:maxLines="1"
                            android:gravity="start"
                            android:textSize="@dimen/sp_14"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingBottom="@dimen/dp_0"
                            android:paddingStart="@dimen/dp_0"
                            android:paddingLeft="@dimen/dp_0"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:textColor="@color/colorMediumGray"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/llRadioFemale"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/ivRadioFemale"
                            android:src="@drawable/inactive_radio_ico"
                            android:padding="3dp"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                    <TextView
                            android:text="@string/female"
                            android:maxLines="1"
                            android:gravity="start"
                            android:textSize="@dimen/sp_14"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingBottom="@dimen/dp_0"
                            android:paddingStart="@dimen/dp_0"
                            android:paddingLeft="@dimen/dp_0"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:textColor="@color/colorMediumGray"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical">
            <TextView
                    android:text="@string/phone_no"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tvCountryCode"
                        android:gravity="start"
                        android:text="+1"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_gray_24dp"
                        android:drawableRight="@drawable/ic_arrow_drop_down_gray_24dp"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorMediumGray"
                        android:fontFamily="@font/poppins_regular"
                        android:minWidth="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:background="@color/colorTextGray"/>
                <EditText
                        android:background="@null"
                        android:padding="@dimen/dp_0"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:id="@+id/etPhoneNo"
                        android:gravity="start"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorMediumGray"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        <Button
                android:id="@+id/btnLogout"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/meterial_button_red"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>