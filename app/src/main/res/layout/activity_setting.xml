<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alertRootLayoutSettings"
        tools:context=".views.ui.activities.SettingActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/ivGoToBack"
                        android:src="@drawable/ic_back_ico"
                        android:padding="@dimen/dp_12"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"/>
                <TextView
                        android:text="@string/action_settings"
                        android:textSize="@dimen/sp_16"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/colorText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView

                        android:padding="@dimen/dp_12"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:text="@string/basic_settings"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>
            <LinearLayout
                    android:id="@+id/llChangePassword"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/lock_ico"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"/>
                <TextView
                        android:text="@string/change_password"
                        android:textSize="@dimen/sp_15"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/colorText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow_ico"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>
            <LinearLayout
                    android:id="@+id/llAboutUs"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/ic_inactive_info_ico"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"/>
                <TextView
                        android:text="@string/about_discount"
                        android:textSize="@dimen/sp_15"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/colorText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow_ico"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>
            <TextView
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:text="@string/support"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>
            <LinearLayout
                    android:id="@+id/llTermsAndConditions"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/term_conditions_ico"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"/>
                <TextView
                        android:text="@string/terms_and_conditions"
                        android:textSize="@dimen/sp_15"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/colorText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow_ico"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>
            <LinearLayout
                    android:id="@+id/llPrivacyPolicy"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/help_ico"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"/>
                <TextView
                        android:text="@string/privacy_policy"
                        android:textSize="@dimen/sp_15"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/colorText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow_ico"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>
            <TextView
                    android:id="@+id/tvLogout"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/horizontal_divider"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>