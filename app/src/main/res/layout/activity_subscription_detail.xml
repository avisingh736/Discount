<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ui.activities.SubscriptionDetailActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/ivGoToBack"
                        android:src="@drawable/ic_back_ico"
                        android:padding="@dimen/dp_12"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"/>
                <TextView
                        android:text="@string/subscriptions"
                        android:textSize="@dimen/sp_16"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/colorText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:padding="@dimen/dp_12"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_15"
                    android:orientation="vertical">
                <TextView
                        android:text="@string/your_currently"
                        android:textSize="@dimen/sp_16"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                    <TextView
                            android:text="@string/active"
                            android:textSize="@dimen/sp_16"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/colorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="@string/subscriptions"
                            android:textSize="@dimen/sp_16"
                            android:gravity="center"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:elevation="@dimen/dp_15">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_35"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                        <TextView
                                android:text="@string/l5"
                                android:gravity="center"
                                android:textSize="@dimen/sp_20"
                                android:textColor="@color/colorText"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="@string/three_months"
                                android:gravity="center"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/colorText"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_mail_price_ico"
                            android:padding="@dimen/dp_20"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:text="@string/purchase_date"
                                android:textSize="@dimen/sp_14"
                                android:gravity="start|center_vertical"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_45"/>
                        <TextView
                                android:text="@string/dob"
                                android:textSize="@dimen/sp_14"
                                android:gravity="center_vertical|end"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_45"/>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorGray"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:text="@string/ends_in"
                                android:textSize="@dimen/sp_14"
                                android:gravity="start|center_vertical"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_45"/>
                        <TextView
                                android:text="@string/l7"
                                android:textSize="@dimen/sp_14"
                                android:gravity="center_vertical|end"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_45"/>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorGray"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:text="@string/next_bill_date"
                                android:textSize="@dimen/sp_14"
                                android:gravity="start|center_vertical"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_45"/>
                        <TextView
                                android:text="@string/dob"
                                android:textSize="@dimen/sp_14"
                                android:gravity="center_vertical|end"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_45"/>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorGray"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:text="@string/coupons_can_be_redeemed"
                                android:textSize="@dimen/sp_14"
                                android:gravity="start|center_vertical"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_45"/>
                        <TextView
                                android:text="@string/l6"
                                android:textSize="@dimen/sp_14"
                                android:gravity="center_vertical|end"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/colorTextGray"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_45"/>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorGray"/>
                    <CheckBox
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/dp_20"
                            android:text="@string/stop_recurring"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="@string/silver_plan"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            app:layout_anchor="@id/cardView"
            app:layout_anchorGravity="top|center_horizontal"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"/>
    <ProgressBar
            android:id="@+id/progressBar"
            android:theme="@style/AppTheme.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
</android.support.design.widget.CoordinatorLayout>